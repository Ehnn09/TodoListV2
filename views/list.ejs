<%- include('header'); -%>



<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>

<div class="box">

    <form action="/delete" method="post">
        <%  newListItem.forEach(function(item){%>
        <div class="item">
            <input type="checkbox" value="<%=item._id%>" onChange="this.form.submit()" name="checkBox">
            <p><%=item.todoTitle%> </p>
        </div>

        <% }) %>

    </form>



    <form action="/" method="post">
        <input type="text" name="newItem" placeholder="To do" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle  %>">+</button>
    </form>

</div>

<%- include('footer'); -%>